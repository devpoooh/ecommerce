package sample03;

public class MainClass {

	public static void main(String[] args) {
		/*
		 * 연산 + - * / %
		 * 
		 * 9/2=4 9%2=1
		 */

		int num1, num2;
		num1 = 3;
		num2 = 2;

		int result = num1 / num2;
		System.out.println(num1 + " / " + num2 + " = " + result);

		// increment(++), decrement(--)
		num1 = 0;
		num1++;
		System.out.println("num1 = " + num1);
		++num1;
		System.out.println("num1 = " + num1);

		int a, b;
		a = 0;
		b = 0;
		
		b = a++;
		System.out.println("a = "+a);//1
		System.out.println("b = "+b);//0

	}

}
